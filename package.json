{
  "name": "gtviz",
  "version": "0.1.0",
  "description": "Real-time Gas Town Visualization",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "gtviz": "src/index.js"
  },
  "exports": {
    ".": "./src/index.js",
    "./status-detector": "./src/status-detector.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "watch": "node src/index.js watch",
    "serve": "node src/index.js serve",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "test": "node --test 'test/**/*.test.js' 'server/**/*.test.js' 'mayor/**/*.test.js'"
  },
  "keywords": [
    "gas-town",
    "agent",
    "status",
    "visualization"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "chokidar": "^3.5.3",
    "better-sqlite3": "^11.7.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
